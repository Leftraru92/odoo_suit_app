<odoo>
    <template id="assets-frontend" inherit_id="website.assets_frontend" name="Vista Tabla">
        <xpath expr="." position="inside">
        </xpath>
    </template>

    <template id="id_vista_tabla">
        <t t-call="website.layout">
            <h3>Vista Tablero</h3>
            <table class="table table-condensed" style="border-collapse: collapse;" >
                <thead>
                    <tr style="background:#DCDCDC">
                        <th class="text-left">
                            <strong>Nro Operaci√≥n</strong>
                        </th>
                        <th class="text-left">
                            <strong>Tipo</strong>
                        </th>
                        <th class="text-left">
                            <strong>Estado</strong>
                        </th>
                        <th class="text-left">
                            <strong>Fecha</strong>
                        </th>
                        <th class="text-left">
                            <strong>Hora</strong>
                        </th>
                        <th class="text-center">
                            <strong>Usuario</strong>
                        </th>
                        <th class="text-right">
                            <strong>Importe</strong>
                        </th>
                    </tr>
                </thead>
                <tbody style="color: #D8F0DA
                            background: transparent">

                    <t t-foreach="dato" t-as="o">
                        <tr>
                            <td class="text-left">
                                <span t-esc="o[0]"/>
                            </td>
                            <td class="text-left">
                                <span t-esc="o[1]"/>
                            </td>
                            <td class="text-left">
                                <span t-esc="o[2]"/>
                            </td>
                            <td class="text-left">
                                <span t-esc="o[3]"/>
                            </td>
                            <td class="text-left">
                                <span t-esc="o[4]"/>
                            </td>
                            <td class="text-center">
                                <span t-esc="o[5]"/>
                            </td>
                            <td class="text-right">
                                <span t-esc="o[6]"/>
                            </td>
                        </tr>
                    </t>
                </tbody>
            </table>
        </t>
    </template>

</odoo>